<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutEvent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/rectangle_radius"
    android:backgroundTint="@color/colorWhite"
    android:elevation="4dp"
    android:paddingLeft="12dp"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/circle"
        android:padding="2dp"
        android:layout_margin="12dp"
        android:elevation="4dp"
        android:src="@drawable/ic_clear"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:backgroundTint="@color/colorWhite"
        app:tint="@color/colorDelete" />

    <TextView
        android:id="@+id/eventNameRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="Event Name"
        android:textColor="@color/colorText"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iconLocation"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_location"
        app:layout_constraintLeft_toLeftOf="@id/eventNameRow"
        app:layout_constraintTop_toBottomOf="@id/eventNameRow"
        app:tint="@color/colorText" />

    <TextView
        android:id="@+id/eventLocationRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/ubuntu_regular"
        android:text="Ho Chi Minh City, Vietnam"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/iconLocation"
        app:layout_constraintLeft_toRightOf="@id/iconLocation"
        app:layout_constraintTop_toTopOf="@id/iconLocation" />

    <ImageView
        android:id="@+id/iconTime"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_time"
        app:layout_constraintLeft_toLeftOf="@id/iconLocation"
        app:layout_constraintTop_toBottomOf="@id/iconLocation"
        app:tint="@color/colorText" />

    <TextView
        android:id="@+id/eventTimeRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/ubuntu_regular"
        android:text="12:00"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/iconTime"
        app:layout_constraintLeft_toRightOf="@id/iconTime"
        app:layout_constraintTop_toTopOf="@id/iconTime" />

    <ImageView
        android:id="@+id/iconDate"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="24dp"
        android:src="@drawable/ic_day"
        app:layout_constraintBottom_toBottomOf="@id/eventTimeRow"
        app:layout_constraintLeft_toRightOf="@id/eventTimeRow"
        app:layout_constraintTop_toTopOf="@id/eventTimeRow"
        app:tint="@color/colorText" />

    <TextView
        android:id="@+id/eventDateRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/ubuntu_regular"
        android:text="2021-04-04"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/iconDate"
        app:layout_constraintLeft_toRightOf="@id/iconDate"
        app:layout_constraintTop_toTopOf="@id/iconDate" />

</androidx.constraintlayout.widget.ConstraintLayout>