<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/dayImage"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginLeft="@dimen/_28sdp"
        android:layout_marginTop="@dimen/_70sdp"
        android:src="@drawable/day"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/nightImage"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_70sdp"
        android:layout_marginRight="@dimen/_28sdp"
        android:src="@drawable/night"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/dayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:fontFamily="@font/ubuntu_regular"
        android:text="Day"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintLeft_toLeftOf="@id/dayImage"
        app:layout_constraintRight_toRightOf="@id/dayImage"
        app:layout_constraintTop_toBottomOf="@id/dayImage" />

    <RadioButton
        android:id="@+id/nightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:fontFamily="@font/ubuntu_regular"
        android:text="Night"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintLeft_toLeftOf="@id/nightImage"
        app:layout_constraintRight_toRightOf="@id/nightImage"
        app:layout_constraintTop_toBottomOf="@id/nightImage" />

</androidx.constraintlayout.widget.ConstraintLayout>